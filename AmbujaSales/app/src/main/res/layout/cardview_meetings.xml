<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="6dp"
        android:id="@+id/cv"
        >

        <RelativeLayout
            android:id="@+id/cardview_meetings_rl_mainlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="0dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                android:clickable="false"
                android:gravity="end">

<!--
                <TextView
                    android:id="@+id/cardview_meetings_tv_meeting_type"
                    android:layout_width="70dp"
                    android:layout_height="28dp"
                    android:padding="1dp"
                    android:text="WARM"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:layout_marginRight="-11dp"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_meeting_bg"/>-->

                <ImageButton
                    android:id="@+id/cardview_meetings_ib_completed"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_done_black_24dp"
                    android:padding="2dp"
                    android:background="@drawable/selectable_button_bg"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="7dp"/>

                <ImageButton
                    android:id="@+id/cardview_meetings_ib_add_reminder"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/icons8_calendar_plus_16"
                    android:padding="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="7dp"
                    android:background="@drawable/selectable_button_bg"/>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/cardview_meetings_tv_meeting_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Meeting One"
                        android:textSize="16dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/cardview_meetings_tv_meeting_type_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meeting Type: "
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/cardview_meetings_tv_meeting_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:ellipsize="end"
                        android:maxEms="10"
                        android:maxLines="1"
                        android:textColor="@android:color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/cardview_meetings_tv_customer_name_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customer Name: "
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/cardview_meetings_tv_customer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customer One"
                        android:ellipsize="end"
                        android:maxEms="10"
                        android:maxLines="1"
                        android:textColor="@android:color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/cardview_meetings_tv_customer_company_name_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Company Name: "
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/cardview_meetings_tv_customer_company_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customer Shop One"
                        android:ellipsize="end"
                        android:maxEms="10"
                        android:maxLines="1"
                        android:textColor="@android:color/black"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/cardview_meetings_tv_customer_address_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address: "
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/cardview_meetings_tv_customer_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AJC Bose Road"
                        android:ellipsize="end"
                        android:maxEms="13"
                        android:maxLines="1"
                        android:textColor="@android:color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/cardview_meetings_tv_meeting_date_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date: "
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/cardview_meetings_tv_meeting_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2017-02-27"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/cardview_meetings_tv_meeting_time_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="Time: "
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/cardview_meetings_tv_meeting_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00"
                        android:textColor="@android:color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    android:weightSum="3">

                    <CheckBox
                        android:id="@+id/cardview_meetings_cb_visited"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="Visited" />

                    <CheckBox
                        android:id="@+id/cardview_meetings_cb_picture"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="Picture" />

                    <CheckBox
                        android:id="@+id/cardview_meetings_cb_signature"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="Signature" />

                </LinearLayout>




            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>