<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccentTransparent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        style="@style/MyToolbar"/>

    <RelativeLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <RelativeLayout
            android:id="@+id/activity_customer_rl_search"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:background="#ffffff">

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/fragment_customer_info_et_search"
                android:layout_height="45dp"
                android:hint="Search"
                android:textSize="14sp"
                android:drawableLeft="@android:drawable/ic_menu_search"
                android:paddingLeft="16dp"
                android:drawablePadding="10dp"
                android:elevation="2dp"
                android:background="#ffffff"/>

            <Button
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:visibility="gone"
                android:id="@+id/fragment_customer_info_btn_clear"
                android:background="@drawable/ic_close_icon"
                android:theme="@style/AccentButton"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>



    <ListView
        android:id="@+id/list_view"
        android:layout_below="@+id/activity_customer_rl_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:visibility="visible"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_customer_info_tv_search_message"
        android:layout_below="@+id/activity_customer_rl_search"
        android:gravity="center"
        android:textSize="16sp"
        android:text="Search for customer details"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/activity_customers_fab_add_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@android:drawable/ic_input_add"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            app:backgroundTint="#FF9800"
            android:tint="@android:color/white"/>


        </RelativeLayout>


</RelativeLayout>