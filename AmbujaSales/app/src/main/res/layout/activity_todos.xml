<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccentTransparent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        style="@style/MyToolbar"/>


    <EditText
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:id="@+id/fragment_tab_visits_et_meeting_search"
        android:layout_height="45dp"
        android:hint="Search"
        android:textSize="14sp"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:paddingLeft="16dp"
        android:drawablePadding="10dp"
        android:background="@android:color/white"
        android:elevation="2dp"/>

    <Button
        android:id="@+id/fragment_tab_visits_btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:visibility="gone"
        android:background="@null"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>

    <ListView
        android:id="@+id/list_view"
        android:layout_below="@+id/fragment_tab_visits_et_meeting_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="0dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fragment_tab_customers_btn_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@android:drawable/ic_input_add"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:tint="@android:color/white"/>


</RelativeLayout>